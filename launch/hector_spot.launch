<?xml version="1.0"?>

<launch>

  <node name="mapping" pkg="spot_garbage_collector" type="move_spot_pose.py" output="screen">
  </node>  

  <node name="laser" pkg="spot_garbage_collector" type="laser_scan_from_PC.py" output="screen">
  </node>  

  <arg name="tf_map_scanmatch_transform_frame_name" default="scanmatcher_frame"/>
  <!--arg name="base_frame" default="base_link"/-->
  <!--arg name="odom_frame" default="base_link"/-->
  <arg name="base_frame" default="body"/>
  <arg name="odom_frame" default="vision"/>
  <arg name="pub_map_odom_transform" default="true"/>
  <arg name="scan_subscriber_queue_size" default="5"/>
  <arg name="scan_topic" default="/scan"/>
  <arg name="map_size" default="2048"/>

  <arg name="geotiff_map_file_path" default="$(find hector_geotiff)/maps"/>

  <!--param name="/use_sim_time" value="true"/-->
  <param name="/use_sim_time" value="false"/>

  <node pkg="rviz" type="rviz" name="rviz"
    args="-d $(find hector_slam_launch)/rviz_cfg/mapping_demo.rviz"/>

  <include file="/home/robot/workspaces/demo/src/spot_ros/spot_garbage_collector/launch/mapping_spot.launch"/>

  <include file="$(find hector_geotiff_launch)/launch/geotiff_mapper.launch">
    <arg name="trajectory_source_frame_name" value="scanmatcher_frame"/>
    <arg name="map_file_path" value="$(arg geotiff_map_file_path)"/>
  </include>

</launch>

